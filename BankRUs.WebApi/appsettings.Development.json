{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Verbose",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "BankRUs.WebApi": "Verbose"
      }
    }
  },
  "ConnectionStrings": {
    "Default": "Server=(localdb)\\MSSQLLocalDB;Database=BankRUs;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "Smtp": {
    "Host": "localhost",
    "Port": 25,
    "From": "no-reply@local.dev"
  },
  "Jwt": {
    "Issuer": "BankRUs.Api",
    "Audience": "BankRUs.Client",
    "Secret": "THIS_IS_A_LONG_RANDOM_SECRET_KEY_32+_CHARS",
    "ExpiresMinutes": 60
  },
  "Paging": {
    "MaxPageSize": 100,
    "DefaultPageSize": 20
  }
}
